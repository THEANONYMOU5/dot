# .bash-aliases

######- VARIABLES -#####  <-- Edit this for your own custom values
$repositories_root = ~/repositories


#####- Color for presentation -#####
red='\033[0;31m'
green='\033[0;32m'
blue='\033[0;34m'
purple='\033[0;35m'
orange='\033[0;33m'
orange='\033[0;33m'
NC='\033[0m' # No Color
DEFAULT='\033[39m' # Default


######- sys call overrides -#####
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias mkdir='mkdir -p'
alias h='history'
alias his='history | grep'





######- Directory Shortcuts -#####
function repo(){
    cd "$repositories_root"
    dir=$(pwd)
    echo -e "  ${red}directory: ${green}$dir${DEFAULT} "
}




######- Fun things -#####

# get current week number in the year
function week(){
    echo -en "${purple}Week number: "
    date +%V
    echo -e "${DEFAULT}"
}
